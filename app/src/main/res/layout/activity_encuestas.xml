<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Encuestas"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_encuesta_inicial"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/encuesta_inicial"
            android:visibility="visible"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encuesta del lugar"
                android:fontFamily="sans-serif-black"
                android:textSize="23dp"
                android:gravity="center_horizontal"
                android:layout_margin="70dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Nombre del lugar"
                android:id="@+id/nombre_lugar"
                android:maxLines="5"
                android:visibility="visible"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="Período de observación"
                android:id="@+id/periodo_observacion"
                android:maxLines="5"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué relación tiene con el lugar?"
                android:fontFamily="sans-serif-black"
                android:textSize="23dp"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vivo al lado"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"/>

                <CheckBox
                    android:id="@+id/encuesta_inicial_pregunta_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Está en mi corregimiento"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"/>

                <CheckBox
                    android:id="@+id/encuesta_inicial_pregunta_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trabajo cerca"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"/>

                <CheckBox
                    android:id="@+id/encuesta_inicial_pregunta_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Es un sitio de encuentro"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"/>

                <CheckBox
                    android:id="@+id/encuesta_inicial_pregunta_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paso cada día por allí"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"/>

                <CheckBox
                    android:id="@+id/encuesta_inicial_pregunta_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Otro"
                android:id="@+id/otro"
                android:maxLines="5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En una palabra ¿Qué sentimientos te genera el sitio?"
                android:fontFamily="sans-serif-black"
                android:textSize="23dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Que sentimiento te genera"
                android:id="@+id/sentimiento"
                android:maxLines="5"
                android:visibility="visible"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Siguiente"
                android:id="@+id/boton_encuesta_lugar"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="#12AA06"/>

        </LinearLayout>

    </ScrollView>

    <!-- Fin encuesta lugar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/bienvenida_vulnerabilidad"
        android:visibility="gone"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/btn_encuesta"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vulnerabilidad del lugar"
            android:fontFamily="sans-serif-black"
            android:textSize="23dp"
            android:gravity="center_horizontal"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="La vulnerabilidad se puede definir como: Debilidad o fragilidad física, económica, social, ambiental o institucional. Ayúdanos a saber como es la vulnerabilidad del sitio, marca la casilla si es vulnerable. Por favor responde las siguientes preguntas:"
            android:textSize="20dp"
            android:justificationMode="inter_word"
            android:layout_margin="10dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:id="@+id/boton_vulnerabilidad_lugar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:backgroundTint="#12AA06"/>

    </LinearLayout>

    <!-- Fin vulnerabilidad lugar -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/encuesta_1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_margin="20dp">

            <ImageView
